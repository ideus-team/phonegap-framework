<?xml version="1.0" encoding="utf-8"?>
<widget id="APPLICATION_ID" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
  <name>APPLICATION_NAME</name>
  <description>
      APPLICATION_DESCRIPTION
  </description>
  <author email="AUTHOR_EMAIL" href="AUTHOR_LINK">
      AUTHOR
  </author>
  <content src="index.html" />

  <access origin="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  
  <!-- global preference -->
  <preference name="Fullscreen" value="true" />
  <!-- <preference name="Orientation" value="portrait" /> -->
  <preference name="DisallowOverscroll" value="true"/>
  <preference name="UIWebViewBounce" value="false" />

  <preference name="ShowSplashScreen" value="true" />
  <preference name="FadeSplashScreen" value="true"/>
  <preference name="AutoHideSplashScreen" value="false" />
  <preference name="ShowSplashScreenSpinner" value="false"/>
  <preference name="fullscreen" value="false" />
  <preference name="android-windowSoftInputMode" value="stateVisible" />
  
  <platform name="android">
    <icon src="../resources/icons/android/drawable-ldpi/icon.png" density="ldpi" />
    <icon src="../resources/icons/android/drawable-mdpi/icon.png" density="mdpi" />
    <icon src="../resources/icons/android/drawable-hdpi/icon.png" density="hdpi" />
    <icon src="../resources/icons/android/drawable-xhdpi/icon.png" density="xhdpi" />
    <icon src="../resources/icons/android/drawable-xxhdpi/icon.png" density="xxhdpi" />
    <icon src="../resources/icons/android/drawable-xxxhdpi/icon.png" density="xxxhdpi" />

    <splash src="../resources/splashes/android/drawable-land-ldpi/screen.png" density="land-ldpi"/>
    <splash src="../resources/splashes/android/drawable-land-mdpi/screen.png" density="land-mdpi"/>
    <splash src="../resources/splashes/android/drawable-land-hdpi/screen.png" density="land-hdpi"/>
    <splash src="../resources/splashes/android/drawable-land-xhdpi/screen.png" density="land-xhdpi"/>
    <splash src="../resources/splashes/android/drawable-land-xxhdpi/screen.png" density="land-xxhdpi"/>
    <splash src="../resources/splashes/android/drawable-land-xxxhdpi/screen.png" density="land-xxxhdpi"/>
    
    <splash src="../resources/splashes/android/drawable-port-ldpi/screen.png" density="port-ldpi"/>
    <splash src="../resources/splashes/android/drawable-port-mdpi/screen.png" density="port-mdpi"/>
    <splash src="../resources/splashes/android/drawable-port-hdpi/screen.png" density="port-hdpi"/>
    <splash src="../resources/splashes/android/drawable-port-xhdpi/screen.png" density="port-xhdpi"/>
    <splash src="../resources/splashes/android/drawable-port-xxhdpi/screen.png" density="port-xxhdpi"/>
    <splash src="../resources/splashes/android/drawable-port-xxxhdpi/screen.png" density="port-xxxhdpi"/>
    
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    
    <allow-intent href="market:*" />
  </platform>

  <platform name="ios">
    <icon src="../resources/icons/ios/Icon.png" width="57" height="57" />
    <icon src="../resources/icons/ios/Icon@2x.png" width="114" height="114" />
    <icon src="../resources/icons/ios/Icon-29.png" width="29" height="29" />
    <icon src="../resources/icons/ios/Icon-29@2x.png" width="58" height="58" />
    <icon src="../resources/icons/ios/Icon-40.png" width="40" height="40" />
    <icon src="../resources/icons/ios/Icon-40@2x.png" width="80" height="80" />
    <icon src="../resources/icons/ios/Icon-50.png" width="50" height="50" />
    <icon src="../resources/icons/ios/Icon-50@2x.png" width="100" height="100" />
    <icon src="../resources/icons/ios/Icon-60.png" width="60" height="60" />
    <icon src="../resources/icons/ios/Icon-60@2x.png" width="120" height="120" />
    <icon src="../resources/icons/ios/Icon-60@3x.png" width="180" height="180" />
    <icon src="../resources/icons/ios/Icon-72.png" width="72" height="72" />
    <icon src="../resources/icons/ios/Icon-72@2x.png" width="144" height="144" />
    <icon src="../resources/icons/ios/Icon-76.png" width="76" height="76" />
    <icon src="../resources/icons/ios/Icon-76@2x.png" width="152" height="152" />

    <splash src="../resources/splashs/ios/Default~iphone.png" width="320" height="480"/>
    <splash src="../resources/splashs/ios/Default@2x~iphone.png" width="640" height="960"/>
    <splash src="../resources/splashs/ios/Default-Portrait~ipad.png" width="768" height="1024"/>
    <splash src="../resources/splashs/ios/Default-Portrait@2x~ipad.png" width="1536" height="2048"/>
    <splash src="../resources/splashs/ios/Default-Landscape~ipad.png" width="1024" height="768"/>
    <splash src="../resources/splashs/ios/Default-Landscape@2x~ipad.png" width="2048" height="1536"/>
    <splash src="../resources/splashs/ios/Default-568h@2x~iphone.png" width="640" height="1136"/>
    <splash src="../resources/splashs/ios/Default-667h.png" width="750" height="1334"/>
    <splash src="../resources/splashs/ios/Default-Portrait-736h.png" width="1242" height="2208"/>
    <splash src="../resources/splashs/ios/Default-Landscape-736h@3x.png" width="2208" height="1242"/>

    <access origin="*" />
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
  </platform>
  
  <platform name="wp8">
    <icon src="www/img/icons/wp/Icon@2x.png" width="99" height="99" />
    <splash src="www/img/splash/splashscreen_v.jpg" width="768" height="1280"/>
    <!-- <engine name="wp8" spec="~3.8.1" /> -->
  </platform>
</widget>
